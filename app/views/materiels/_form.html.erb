<div class="section">
  <%= simple_form_for @materiel do |f| %>
    <div class="field">
          <%= f.select(:mat_type, options_for_select( [["Selectioner un materiel", 0],["Ordinateur","Ordinateur"],["Telephone","Telephone"]]),class:"form-select form-select-lg mb-3") %>
        <br>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :nom, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-primary" %>
  <% end %>
</div>