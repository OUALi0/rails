<% content_for :page_title, @document.titre %>
<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Description de Document</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_document_path(@document), class:"btn btn-info" %>
          <%= button_to "Delete", @document, method: :delete,  class:"btn btn-danger" %>
        </p>
		  </div>
		</nav>
		<hr/>
    <div class="d-flex w-200 mb-2">
        <div class="w-25">ID:</div>
        <div><strong><%= @document.id %></strong> </div>
    </div>

    <div class="d-flex w-200 mb-2">
      <div class="w-25">Type:</div>
      <div><strong><%= @document.doc_type %></strong> </div>
    </div>

    <div class="d-flex w-200 mb-2">
      <div class="w-25">Titre de Livre:</div>
      <div><strong><%= @document.titre %></strong> </div>
    </div>

     <div class="d-flex w-200 mb-2">
      <div class="w-25">Isbn:</div>
      <div><strong><%= @document.isbn %></strong> </div>
    </div>
    
    <div class="d-flex w-200 mb-2">
      <div class="w-25">Auteurs:</div>
      <div><strong><% @auteurs.each do |auteur| %>
        <%= "#{auteur.nom_prenom}, " %>
      <% end %></strong></div>
    </div>
	</div><br>
  <div class="card">
  <div class="card-body">
    <div class="mb-10 container-fluid">
      <%= link_to "Back to documents", documents_path, class:"btn btn-outline-info" %>
    </div>
  </div>
</div>

