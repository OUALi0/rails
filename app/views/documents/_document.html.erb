<tr id="<%= dom_id document %>">
  <td>
    <%= document.doc_type %>
  </td>
  <td>
    <%= document.titre %>
  </td>
  <td>
    <%= document.isbn %>
  </td>
  <td>
    <% if document.auteurs.any? %>
      <% document.auteurs.each do |auteur| %>
        <%= "#{auteur.nom_prenom }, " %>
      <% end %>
    <% else %>
      No documents
    <% end %>
  </td>
  <td>
    <%= document.created_at.strftime("%Y-%m-%d %H:%M") %>
  </td>
  <td>
    <%= button_to "", document, class:"btn btn-outline-primary bi bi-eye", :method => "get" %>
  </td>
</tr>


